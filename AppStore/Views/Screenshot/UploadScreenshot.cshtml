@model UploadScreenshotViewModel

<form asp-action="UploadScreenshot" method="post" enctype="multipart/form-data">
    <input type="hidden" name="AppId" value="@Model.AppId" />

    <div class="form-group">
        <label for="ImageFile">Illustrative Image</label>
        <input type="file" name="ImageFile" class="form-control mb-2" multiple accept="image/*" />
        <small class="form-text text-muted">Select 1 or more images</small>
    </div>

    <div class="form-group d-flex justify-content-between">
        <a class="btn btn-outline-secondary" asp-controller="App" asp-action="Detail" asp-route-appId="@Model.AppId">Cancel</a>
        <button type="submit" class="btn btn-success mt-2">Upload</button>
    </div>
</form>